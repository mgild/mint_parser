{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"], 
    "outDir": "./dist/cjs/",
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": ["**/*.test.ts"]
}
